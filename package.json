{
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "lint:frontend": "cd ./frontend && npm run lint",
    "format:frontend": "cd ./frontend && npm run format"
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,tsx}": [
      "npm run lint:frontend"
    ],
    "backend/**/*.py": [
      "black ."
    ]
  }
}
